@model wall_project.Models.User


@{
    ViewData["Title"] = "Home Page";
}
<h1>Register:</h1>


<form asp-controller="Home" asp-action="Register" method="post">
    <span asp-validation-for="FirstName"></span>
    <label asp-for="FirstName"></label>
    <input style="margin-left: 50px;" asp-for="FirstName"/>
    <br>
    <br>
    <span asp-validation-for="LastName"></span>
    <label asp-for="LastName"></label>
    <input style="margin-left: 50px;" asp-for="LastName"/>
    <br>
    <br>
    <span asp-validation-for="Email"></span>
    <label asp-for="Email"></label>
    <input style="margin-left: 75px;" asp-for="Email"/>
    <br>
    <br>
    <span asp-validation-for="Password"></span>
    <label asp-for="Password"></label>
    <input style="margin-left: 50px;" asp-for="Password"/>
    <br>
    <br>
    <span asp-validation-for="Confirm"></span>
    <label asp-for="Confirm"></label>
    <input style="margin-left: 50px;" asp-for="Confirm"/>
    <br>
    <br>
    <button style="margin-left: 115px;" type="submit">Create new User</button>
</form>

<h1>Login:</h1>

<h2>@ViewBag.Errors</h2>


<form action="Login" method="post">

    <label for="Email">Email:</label>
    <input style="margin-left: 75px;" name="Email" type="text"/>
    <br>
    <br>

    <label for="Password">Password:</label>
    <input style="margin-left: 50px;" name="Password" type="password"/>
    <br>
    <br>
    <button style="margin-left: 115px;" type="submit">Login</button>
</form>